<main>
    {{#if hasProducts }}
    <div class="grid">
        {{#each prods}}
        <article class=" card flex__column product-item">
            <header class="card__header">
                <h1 class="product__title">{{ this.title }}</h1>
            </header>
            <div class="card__image">
                <img src="{{ this.imageUrl }}"
                    alt="{{ this.title }}">
            </div>
            <div class="card__content">
                <h2 class="product__price">${{ this.price }}</h2>
                <p class="product__description">{{ this.description }}</p>
            </div>
            <div class="flex__items card__actions">
                <a class="btn" href="/admin/edit-product/{{ this._id }}">Edit</a>
                <form action="/admin/delete-product" method="POST">
                    <input type="hidden" name="productId" value="{{ this._id }}">
                    <button class="btn" type="submit">Delete</button>
                </form>
            </div>
        </article>
        {{/each}}
    </div>
    {{ else }}
    <h1>No Products Found!</h1>
    {{/if}}
</main>