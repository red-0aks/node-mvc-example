<main class="product__main_container">
    <div class="card product__detail">
        <h1 class="product__title_item">{{ product.title }}</h1>
        <hr class="product__hr">
        <img class="product__image" src="{{ product.imageUrl }}" alt="{{ product.title }}">
        <h2>${{ product.price }}</h2>
        <p>{{ product.description }}</p>
    </div>
</main>